{
	"$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
	"extends": ["../../biome.json"],
	"files": {
		"include": ["src/*"],
		"ignoreUnknown": true,
		"ignore": ["./~", ".react-router"]
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noReactSpecificProps": "off"
			},
			"nursery": {
				"noSecrets": "off",
				"useComponentExportOnlyModules": "off",
				"useConsistentCurlyBraces": "off"
			},
			"style": {
				"noDefaultExport": "off"
			}
		}
	},
	"overrides": [
		{
			"include": ["server/**/*.ts"],
			"linter": {
				"rules": {
					"style": {
						"useNamingConvention": "info"
					},
					"suspicious": {
						"noConsole": "off",
						"noConsoleLog": "off"
					},
					"correctness": {
						"noNodejsModules": "off"
					},
					"nursery": {
						"useExplicitType": "off",
						"noSecrets": "off"
					}
				}
			}
		},
		{
			"include": ["app/routes/**/*.tsx"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		},
		{
			"include": ["**/*.snapshot.json"],
			"formatter": {
				"enabled": false
			}
		}
	]
}
