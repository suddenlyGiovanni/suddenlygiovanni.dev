{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@suddenly-giovanni/config-tailwind",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"exports": {
		"./postcss.config.js": {
			"import": "./postcss.config.js",
			"types": "./postcss.config.d.ts"
		},
		"./tailwind.config.ts": "./tailwind.config.ts",
		"./styles.css": "./styles.css"
	},
	"scripts": {
		"clean": "scripty",
		"typecheck": "scripty"
	},
	"peerDependenciesMeta": {
		"tailwindcss": {
			"optional": false
		},
		"postcss": {
			"optional": false
		},
		"autoprefixer": {
			"optional": false
		}
	},
	"devDependencies": {
		"@suddenly-giovanni/config-typescript": "workspace:*",
		"@tailwindcss/typography": "0.5.11",
		"postcss-load-config": "5.0.3",
		"tailwind-variants": "0.2.1",
		"tailwindcss": "3.4.1",
		"tailwindcss-animate": "1.0.7"
	},
	"config": {
		"scripty": {
			"path": "../../scripts"
		}
	}
}
