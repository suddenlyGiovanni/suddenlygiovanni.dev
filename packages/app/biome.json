{
	"$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
	"extends": "//",
	"files": {
		"ignoreUnknown": true,
		"includes": ["src/**", "!~", ".react-router"]
	},
	"linter": {
		"rules": {
			"complexity": {
				"noArguments": "error",
				"noCommaOperator": "error"
			},
			"nursery": {
				"noSecrets": "off"
			},
			"suspicious": {
				"noReactSpecificProps": "off"
			}
		}
	},
	"overrides": [
		{
			"includes": ["src/server/**/*.ts"],
			"linter": {
				"rules": {
					"correctness": {
						"noNodejsModules": "off"
					},
					"nursery": {
						"noSecrets": "off",
						"useExplicitType": "off"
					},
					"style": {
						"useNamingConvention": "info"
					},
					"suspicious": {
						"noConsole": {
							"level": "off",
							"options": {
								"allow": ["log"]
							}
						}
					}
				}
			}
		},
		{
			"includes": ["src/routes/**/*.tsx"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		},
		{
			"assist": {
				"enabled": false
			},
			"formatter": {
				"enabled": false
			},
			"includes": ["src/**/*.snapshot.json"]
		}
	],
	"root": false
}
