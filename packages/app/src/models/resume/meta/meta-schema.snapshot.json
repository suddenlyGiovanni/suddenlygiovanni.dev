{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$defs": {
		"Meta": {
			"type": "object",
			"required": [
				"version"
			],
			"properties": {
				"canonical": {
					"anyOf": [
						{
							"$ref": "#/$defs/UrlString"
						},
						{
							"type": "null"
						}
					]
				},
				"lastModified": {
					"$ref": "#/$defs/Date"
				},
				"version": {
					"$ref": "#/$defs/TrimmedNonEmpty"
				}
			},
			"additionalProperties": false
		},
		"UrlString": {
			"type": "string",
			"description": "a string that fulfills the URL requirements (as per RFC 3986)",
			"title": "UrlString",
			"examples": [
				"https://example.com",
				"https://example.com/#section",
				"http://example.com:8080",
				"http://üçåüçåüçå.ws",
				"https://www.√ºbercool.de"
			],
			"format": "uri"
		},
		"Date": {
			"type": "string",
			"description": "a string to be decoded into a Date"
		},
		"TrimmedNonEmpty": {
			"type": "string",
			"description": "A version field which follows semver - e.g. v1.0.0",
			"title": "version",
			"minLength": 1,
			"pattern": "^[^\\s].*[^\\s]$"
		}
	},
	"$ref": "#/$defs/Meta"
}