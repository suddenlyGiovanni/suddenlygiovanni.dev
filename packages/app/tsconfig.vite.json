{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"composite": true,
		"module": "Preserve",
		"noEmit": true,
		"rootDirs": [".", "./.react-router/types"],
		"types": [
			"@total-typescript/ts-reset",
			"@octokit/core",
			"react",
			"react-dom",
			"vite/client",
			"vitest/config",
			"vitest/importMeta",
			"@react-router/node",
			"@types/mdx"
		]
	},
	"exclude": ["build", "node_modules", "./~"],
	"extends": ["./tsconfig.json", "@repo/typescript-config/remix.json"],
	"include": [
		"vite.config.ts",
		".react-router/types/**/*",
		"src/**/*",
		"!src/server/**/*",
		"types/*.d.ts",
		"types/*.ts"
	]
}
