{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@suddenly-giovanni/ui",
  "private": true,
  "version": "0.0.1",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    "./tailwind.css": "./dist/styles/tailwind.css",
    ".": {
      "import": "./src/index.tsx",
      "types": "./dist/index.d.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tailwindcss -i ./src/styles/tailwind.css -o dist/styles/tailwind.css",
    "check": "biome check .",
    "check:fix": "biome check --apply .",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "components-add": "pnpm dlx shadcn-ui@latest add",
    "components-diff": "pnpm dlx shadcn-ui@latest diff",
    "dev": "pnpm run build --watch",
    "format": "prettier --write src",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "18.3.0-canary-ba5e6a832-20240208"
  },
  "devDependencies": {
    "@suddenly-giovanni/config-prettier": "workspace:*",
    "@suddenly-giovanni/config-tailwind": "workspace:*",
    "@suddenly-giovanni/config-typescript": "workspace:*",
    "@suddenly-giovanni/eslint-config": "workspace:*",
    "@total-typescript/ts-reset": "0.5.1",
    "@types/react": "18.2.55",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "10.4.17",
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.0",
    "postcss": "8.4.35",
    "prettier": "3.2.5",
    "react": "18.3.0-canary-ba5e6a832-20240208",
    "tailwind-merge": "2.2.1",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "1.0.4",
    "@radix-ui/react-icons": "1.3.0",
    "tailwindcss-animate": "1.0.7"
  }
}
