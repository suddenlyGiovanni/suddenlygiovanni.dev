{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@suddenlygiovanni/config-typescript/react-library.json",
	"compilerOptions": {
		"baseUrl": ".",
		"noEmit": true,
		"types": ["@total-typescript/ts-reset", "vite/client", "react", "react-dom"],
		"useDefineForClassFields": true
	},
	"include": [
		"tailwind.config.ts",
		"vite.config.ts",
		"postcss.config.mjs",
		"./.storybook/**/*",
		"./src/**/*"
	],
	"exclude": ["dist", "build", "node_modules", "./~"]
}
