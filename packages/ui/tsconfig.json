		"useDefineForClassFields": true,
		"paths": {
			"~/*": ["./src/*"],
		},
		"types": ["@total-typescript/ts-reset", "vite/client", "react", "react-dom"],
	},
	"include": ["./src/**/*"],
	"exclude": ["dist", "build", "node_modules"]
}
