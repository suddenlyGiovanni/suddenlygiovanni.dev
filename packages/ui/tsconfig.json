{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": ["../../tsconfig.json", "@suddenly-giovanni/config-typescript/react-library.json"],
	"compilerOptions": {
		"composite": true,
		"incremental": true,
		"noEmit": true,
		"paths": {
			"~/*": ["./src/*"]
		},
		"types": ["@total-typescript/ts-reset", "vite/client", "react", "react-dom"],
		"useDefineForClassFields": true
	},
	"include": [
		"tailwind.config.ts",
		"vite.config.ts",
		"postcss.config.mjs",
		".prettierrc.js",
		".eslintrc.cjs",
		"./src/**/*"
	],
	"exclude": ["dist", "build", "node_modules", "./~"]
}
