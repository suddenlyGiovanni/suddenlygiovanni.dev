{
	"$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
	"css": {
		"assist": {
			"enabled": false
		},
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		}
	},
	"extends": "//",
	"files": {
		"includes": ["./style.css", "./package.json", "biome.json"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"recommended": true
			},
			"correctness": {
				"recommended": true
			},
			"nursery": {
				"noImportantStyles": "error",
				"noUnknownAtRule": "error",
				"noUselessEscapeInString": "error"
			},
			"recommended": true,
			"style": {
				"noDescendingSpecificity": "error",
				"noValueAtRule": "error",
				"recommended": true
			},
			"suspicious": {
				"recommended": true
			}
		}
	},
	"root": false
}
