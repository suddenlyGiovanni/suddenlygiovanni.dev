    rm -rf "$dir"
    echo "âœ… Removed '$dir'"
  else
    echo "ğŸ”'$dir' does not exist; âœ… moving on..."
  fi
done

if [[ $? -eq 0 ]];
then echo "âœ… Cleanup successful."
  else echo "âŒ Cleanup failed."
fi
