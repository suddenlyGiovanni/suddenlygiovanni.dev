{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"include": ["./apps/**/*", "./packages/**/*"],
		"ignore": ["node_modules", "**/node_modules", "./~"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main",
		"useIgnoreFile": true,
		"root": "."
	},
	"organizeImports": {
		"enabled": true,
		"include": ["./apps/**/*", "./packages/**/*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"lineEnding": "lf",
		"indentWidth": 2,
		"formatWithErrors": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"correctness": {
				"noUndeclaredDependencies": "off"
			},
			"nursery": {
				"all": true,
				"noEnum": "info",
				"noSecrets": "off",
				"useExplicitType": "warn",
				"useImportRestrictions": "off"
			},
			"performance": {},
			"style": {
				"noNamespaceImport": "off",
				"useNamingConvention": "off"
			},
			"suspicious": {
				"noConsole": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "asNeeded",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingCommas": "all",
			"attributePosition": "multiline"
		}
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"lineWidth": 80,
			"lineEnding": "lf",
			"indentWidth": 2
		},
		"linter": {
			"enabled": false
		}
	},
	"overrides": [
		{
			"include": ["packages/open-graph-protocol/**/*.ts"],
			"linter": {
				"rules": {
					"nursery": {
						"useImportRestrictions": "off"
					},
					"performance": {
						"noBarrelFile": "off",
						"noReExportAll": "off"
					},
					"style": {
						"useNamingConvention": {
							"level": "off",
							"options": {
								"strictCase": false
							}
						}
					}
				}
			}
		}
	]
}
