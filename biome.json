{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"include": ["./apps/**/*", "./packages/**/*"],
		"ignore": ["node_modules", "**/node_modules", "./~"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main",
		"useIgnoreFile": true,
		"root": "."
	},
	"organizeImports": {
		"enabled": true,
		"include": ["./apps/**/*", "./packages/**/*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"lineEnding": "lf",
		"indentWidth": 2,
		"formatWithErrors": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"useSemanticElements": "off"
			},
			"all": true,
			"complexity": {
				"noStaticOnlyClass": "off"
			},
			"correctness": {
				"noUndeclaredDependencies": "off"
			},
			"nursery": {
				"all": true,
				"noSecrets": "off",
				"useExplicitFunctionReturnType": "off",
				"useImportRestrictions": "off",
				"useSortedClasses": {
					"fix": "safe",
					"options": {
						"attributes": ["class", "className"],
						"functions": ["clsx", "cva", "tw"]
					},
					"level": "warn"
				}
			},
			"performance": {
				"noBarrelFile": "warn",
				"noReExportAll": "warn"
			},
			"style": {
				"noNamespaceImport": "off",
				"useNamingConvention": "warn"
			},
			"suspicious": {
				"noReactSpecificProps": "off",
				"noConsole": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "asNeeded",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingCommas": "all",
			"attributePosition": "multiline"
		}
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"lineWidth": 80,
			"lineEnding": "lf",
			"indentWidth": 2
		},
		"linter": {
			"enabled": false
		}
	},
	"overrides": [
		{
			"include": ["packages/open-graph-protocol/**/*.ts"],
			"linter": {
				"rules": {
					"nursery": {
						"useImportRestrictions": "off"
					},
					"performance": {
						"noBarrelFile": "off",
						"noReExportAll": "off"
					},
					"style": {
						"useNamingConvention": {
							"level": "off",
							"options": {
								"strictCase": false
							}
						}
					}
				}
			}
		},
		{
			"include": ["**/*.snapshot.json"],
			"formatter": {
				"enabled": false
			}
		},
		{
			"include": ["**/*.stories.tsx"],
			"linter": {
				"rules": {
					"nursery": {
						"useComponentExportOnlyModules": "off"
					},
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		},
		{
			"include": ["apps/web/**/*"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		}
	]
}
