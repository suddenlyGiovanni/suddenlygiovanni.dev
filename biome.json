{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"include": ["./apps/**/*", "./packages/**/*"],
		"ignore": ["node_modules", "**/node_modules", "./~"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main",
		"useIgnoreFile": true,
		"root": "."
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"lineEnding": "lf",
		"indentWidth": 2,
		"formatWithErrors": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"nursery": {
				"all": true,
				"noUndeclaredDependencies": "off",
				"noReactSpecificProps": "off"
			},
			"style": {
				"noNamespaceImport": {
					"level": "off"
				}
			},
			"performance": {
				"noBarrelFile": {
					"level": "warn"
				},
				"noReExportAll": {
					"level": "warn"
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "asNeeded",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingComma": "all",
			"attributePosition": "multiline"
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	},
	"overrides": [
		{
			"include": ["**/*.snapshot.json"],
			"formatter": {
				"enabled": false
			}
		},
		{
			"include": ["**/*.stories.tsx"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		},
		{
			"include": ["apps/web/**/*"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		}
	]
}
