	"devDependencies": {
		"@biomejs/biome": "nightly",
		"scripty": "2.1.1",
		"turbo": "2.3.3",
		"typescript": "5.7.2"
	},
	"engines": {
		"node": ">=22.10"
	},
	"license": "UNLICENSED",
	"name": "@suddenlygiovanni/root",
