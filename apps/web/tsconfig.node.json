{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"composite": true,
		"target": "esnext",
		"module": "nodenext",
		"allowImportingTsExtensions": true,
		"rewriteRelativeImportExtensions": true,
		"verbatimModuleSyntax": true,
		"types": ["node"]
	},
	"extends": ["./tsconfig.json", "@suddenlygiovanni/config-typescript/library.json"],
	"include": [
		"./vite.config.ts",
		"./handlers.ts",
		"./vitest.setup.ts",
		"./server/**/*.ts",
		"./mocks/**/*.ts"
	]
}
