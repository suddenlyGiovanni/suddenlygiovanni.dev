{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": ["./tsconfig.json", "@suddenlygiovanni/config-typescript/remix.json"],
	"compilerOptions": {
		"composite": true,
		"baseUrl": ".",
		"module": "Preserve",
		"noEmit": true,
		"types": [
			"@total-typescript/ts-reset",
			"@octokit/core",
			"react",
			"react-dom",
			"vite/client",
			"vitest/config",
			"@react-router/node",
			"@types/mdx"
		],
		"rootDirs": [".", "./.react-router/types"]
	},
	"include": ["vite.config.ts", ".react-router/types/**/*", "src/**/*", "types/*.d.ts"],
	"exclude": ["build", "node_modules", "./~"]
}
