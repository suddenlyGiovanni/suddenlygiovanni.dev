{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@suddenly-giovanni/config-typescript/remix.json",
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"baseUrl": ".",
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"noEmit": true,
		"paths": {
			"~/*": ["./app/*"]
		},
		"skipLibCheck": true,
		"target": "ES2022",
		"types": [
			"@total-typescript/ts-reset",
			"react",
			"react-dom",
			"vite/client",
			"vitest",
			"./env.d.ts"
		]
	},
	"include": [
		"env.d.ts",
		"tailwind.config.ts",
		"vite.config.ts",
		".prettierrc.js",
		".eslintrc.cjs",
		"postcss.config.mjs",
		"app/**/*"
	],
	"exclude": ["build", "node_modules", "./~"]
}
